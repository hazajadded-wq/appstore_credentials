# SalaryInfo iOS Podfile
# For Firebase with APNs support

# Minimum iOS version
platform :ios, '15.0'

# Disable CocoaPods analytics for faster builds
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('podhelpers', 'flutter'), File.dirname(__FILE__))

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Install all Flutter plugins
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # ðŸ”¥ FIREBASE PODS (Required for APNs & Push Notifications)
  pod 'Firebase/Core', '10.23.0'
  pod 'Firebase/Messaging', '10.23.0'
  pod 'Firebase/Analytics', '10.23.0'
  pod 'Firebase/Installations', '10.23.0'
  
  # Additional Firebase pods for better APNs support
  pod 'Firebase/Crashlytics', '10.23.0'
  pod 'Firebase/RemoteConfig', '10.23.0'
  
  # WebKit for WKWebView
  pod 'WebKit'
  
  # Post-install configuration for Firebase and APNs compatibility
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        
        # Set minimum iOS version
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
        
        # Enable building for distribution
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
        
        # Fix for arm64 simulator on Apple Silicon (M1/M2/M3)
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
        
        # Enable modules for Firebase
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        
        # Swift version
        if target.respond_to?(:product_type) && target.product_type == 'com.apple.product-type.framework'
          config.build_settings['SWIFT_VERSION'] = '5.0'
        end
        
        # APNs and Push Notifications optimizations
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
          '$(inherited)',
          'FIR_SWIFT_SUPPORT=1',
          'POD_CONFIGURATION_DEBUG=1'
        ]
        
        # Bitcode settings
        config.build_settings['ENABLE_BITCODE'] = 'NO'
      end
    end
    
    # Run Flutter post-install script if available
    flutter_post_install(installer) if defined?(flutter_post_install)
    
    print("âœ… Pod installation complete with APNs support")
  end
end